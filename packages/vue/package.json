{
  "name": "@ldesign/ppt-vue",
  "version": "0.1.0",
  "description": "Vue adapter for @ldesign/ppt-core - PPT/PPTX rendering in Vue applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.vue",
    "typecheck": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@ldesign/ppt-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vue": "^3.3.0",
    "vue-tsc": "^1.8.25"
  },
  "keywords": [
    "vue",
    "ppt",
    "pptx",
    "powerpoint",
    "presentation",
    "renderer",
    "viewer"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ppt.git",
    "directory": "packages/vue"
  }
}
