{
  "name": "@ldesign/ppt-core",
  "version": "0.1.0",
  "description": "Framework-agnostic core engine for rendering PPT/PPTX files in web applications",
  "keywords": [
    "ppt",
    "pptx",
    "powerpoint",
    "presentation",
    "slides",
    "openxml",
    "renderer"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./parser": {
      "import": "./dist/parser/index.js",
      "require": "./dist/parser/index.cjs",
      "types": "./dist/parser/index.d.ts"
    },
    "./renderer": {
      "import": "./dist/renderer/index.js",
      "require": "./dist/renderer/index.cjs",
      "types": "./dist/renderer/index.d.ts"
    },
    "./animation": {
      "import": "./dist/animation/index.js",
      "require": "./dist/animation/index.cjs",
      "types": "./dist/animation/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "fast-xml-parser": "^4.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
